<%= render "layouts/header" %>
		<script>
			$(document).ready(function() {
				$('#notif-close').click(function() {
					$('#notif').hide();
				});
			});
		</script>
		
		<div class="row title-page-gap-top">
			<div class="col-md-12">
				<div class="title-page">Create a new location</div>
			</div>
		</div>
		
		<div class="row">
			<hr>
		</div>
		
		<% @data = @location %>
		<%= render "layouts/notification_new" %>
		
		<div class="row form-style">
			<div class="col-md-12 formcontent-style">
				<%= form_with scope: :location, url: locations_path, local: true do |form| %>
					<div class="formtext-label">Location</div>
					<%= form.text_field :name, class: 'formtext-field full-width' %>
					
					<div class="formstylebtn">
						<%= form.submit 'Create new location', class: 'greenbtn full-width' %>
					</div>
				<% end %>
			</div>
		</div>
<%= render "layouts/footer" %>